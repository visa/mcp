{
  "name": "@visa/mcp-client",
  "version": "1.0.0",
  "description": "Visa MCP (Model Context Protocol) Client for Node.js",
  "main": "dist/mcp-client.js",
  "types": "dist/mcp-client.d.ts",
  "exports": {
    ".": {
      "types": "./dist/mcp-client.d.ts",
      "default": "./dist/mcp-client.js"
    }
  },
  "scripts": {
    "build": "cd ../packages/token-manager && npm install && npm run build && cd ../../mcp-client && npm install",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.js,.mjs --fix",
    "lint:check": "eslint . --ext .ts,.js,.mjs --max-warnings 0",
    "format": "prettier --write .",
    "workflow:connection": "npx tsx examples/workflows/mcp-server-connection.ts",
    "workflow:create-cancel": "npx tsx examples/workflows/create-and-cancel-instruction.ts",
    "workflow:create-update": "npx tsx examples/workflows/create-and-update-instruction.ts",
    "workflow:retrieve-confirm": "npx tsx examples/workflows/retrieve-credentials-confirmations.ts"
  },
  "keywords": [
    "visa",
    "mcp",
    "model-context-protocol",
    "api-client"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@vic/token-manager": "file:../packages/token-manager",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
